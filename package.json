{
  "name": "nadi-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Nadi - Zero-runtime reactive framework for Laravel",
  "workspaces": [
    "packages/*",
    "playground",
    "docs"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "playground": "pnpm --filter playground dev",
    "test": "turbo run test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "size-limit": "^11.0.1",
    "@size-limit/preset-small-lib": "^11.0.1",
    "tsup": "^8.0.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "vitest": "^1.1.1"
  },
  "size-limit": [
    {
      "name": "@nadi/core",
      "path": "packages/core/dist/index.js",
      "limit": "3 KB"
    },
    {
      "name": "@nadi/core/jsx-runtime",
      "path": "packages/core/dist/jsx-runtime.js",
      "limit": "2.5 KB"
    },
    {
      "name": "@nadi/router",
      "path": "packages/router/dist/index.js",
      "limit": "1.5 KB"
    },
    {
      "name": "@nadi/forms",
      "path": "packages/forms/dist/index.js",
      "limit": "2 KB"
    },
    {
      "name": "@nadi/meta",
      "path": "packages/meta/dist/index.js",
      "limit": "1 KB"
    },
    {
      "name": "@nadi/echo",
      "path": "packages/echo/dist/index.js",
      "limit": "1.5 KB"
    }
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}