<script lang="ts">
import { signal, computed } from '@nadi/core';
import { createForm } from '@nadi/forms';
import { required, minLength } from '@nadi/forms/validators';
import { Head, Title, Meta } from '@nadi/meta';

export default function TodoApp(props: { initialTodos: Todo[] }) {
  const [todos, setTodos] = signal<Todo[]>(props.initialTodos || []);
  const [filter, setFilter] = signal<'all' | 'active' | 'completed'>('all');

  const form = createForm({
    initialValues: {
      title: '',
      description: ''
    },
    validationRules: {
      title: [required(), minLength(3)],
      description: [required()]
    },
    onSubmit: async (values) => {
      const response = await fetch('/api/todos', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(values)
      });

      const newTodo = await response.json();
      setTodos([...todos(), newTodo]);
      form.reset();
    }
  });

  const filteredTodos = computed(() => {
    switch (filter()) {
      case 'active':
        return todos().filter(t => !t.completed);
      case 'completed':
        return todos().filter(t => t.completed);
      default:
        return todos();
    }
  });

  const toggleTodo = async (id: number) => {
    const todo = todos().find(t => t.id === id);
    if (!todo) return;

    await fetch(`/api/todos/${id}`, {
      method: 'PATCH',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ completed: !todo.completed })
    });

    setTodos(todos().map(t =>
      t.id === id ? { ...t, completed: !t.completed } : t
    ));
  };

  const deleteTodo = async (id: number) => {
    await fetch(`/api/todos/${id}`, { method: 'DELETE' });
    setTodos(todos().filter(t => t.id !== id));
  };

  return {
    form,
    todos,
    filteredTodos,
    filter,
    setFilter,
    toggleTodo,
    deleteTodo
  };
}

interface Todo {
  id: number;
  title: string;
  description: string;
  completed: boolean;
  created_at: string;
}
</script>

<template>
  <div class="todo-app">
    <Head>
      <Title>Todo App - Nadi Laravel Example</Title>
      <Meta name="description" content="A reactive todo app built with Nadi and Laravel" />
    </Head>

    <header class="header">
      <h1>üìù Nadi Todo App</h1>
      <p>Powered by Laravel + Nadi</p>
    </header>

    <main class="container">
      <section class="add-todo">
        <h2>Add New Todo</h2>
        <form onSubmit={form.handleSubmit}>
          <div class="form-group">
            <label>Title</label>
            <input
              type="text"
              value={form.fields.title.value()}
              onInput={(e) => form.fields.title.setValue(e.target.value)}
              onBlur={() => form.fields.title.setTouched(true)}
              placeholder="Enter todo title"
            />
            {form.fields.title.touched() && form.fields.title.error() && (
              <span class="error">{form.fields.title.error()}</span>
            )}
          </div>

          <div class="form-group">
            <label>Description</label>
            <textarea
              value={form.fields.description.value()}
              onInput={(e) => form.fields.description.setValue(e.target.value)}
              onBlur={() => form.fields.description.setTouched(true)}
              placeholder="Enter description"
              rows={3}
            />
            {form.fields.description.touched() && form.fields.description.error() && (
              <span class="error">{form.fields.description.error()}</span>
            )}
          </div>

          <button type="submit" disabled={form.isSubmitting() || !form.isValid()}>
            {form.isSubmitting() ? 'Adding...' : 'Add Todo'}
          </button>
        </form>
      </section>

      <section class="todo-list">
        <div class="filters">
          <button
            class={filter() === 'all' ? 'active' : ''}
            onClick={() => setFilter('all')}
          >
            All ({todos().length})
          </button>
          <button
            class={filter() === 'active' ? 'active' : ''}
            onClick={() => setFilter('active')}
          >
            Active ({todos().filter(t => !t.completed).length})
          </button>
          <button
            class={filter() === 'completed' ? 'active' : ''}
            onClick={() => setFilter('completed')}
          >
            Completed ({todos().filter(t => t.completed).length})
          </button>
        </div>

        <div class="todos">
          {filteredTodos().length === 0 ? (
            <p class="empty">No todos found</p>
          ) : (
            filteredTodos().map(todo => (
              <div class={`todo-item ${todo.completed ? 'completed' : ''}`} key={todo.id}>
                <div class="todo-checkbox">
                  <input
                    type="checkbox"
                    checked={todo.completed}
                    onChange={() => toggleTodo(todo.id)}
                  />
                </div>
                <div class="todo-content">
                  <h3>{todo.title}</h3>
                  <p>{todo.description}</p>
                  <span class="date">
                    {new Date(todo.created_at).toLocaleDateString()}
                  </span>
                </div>
                <button
                  class="delete-btn"
                  onClick={() => deleteTodo(todo.id)}
                  title="Delete todo"
                >
                  üóëÔ∏è
                </button>
              </div>
            ))
          )}
        </div>
      </section>
    </main>
  </div>
</template>

