{
  "name": "@nadi/ui",
  "version": "0.1.0",
  "description": "Professional UI component library for Nadi with cutting-edge animations and layouts",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./button": {
      "types": "./dist/components/Button.d.ts",
      "import": "./dist/components/Button.js"
    },
    "./input": {
      "types": "./dist/components/Input.d.ts",
      "import": "./dist/components/Input.js"
    },
    "./modal": {
      "types": "./dist/components/Modal.d.ts",
      "import": "./dist/components/Modal.js"
    },
    "./card": {
      "types": "./dist/components/Card.d.ts",
      "import": "./dist/components/Card.js"
    },
    "./grid": {
      "types": "./dist/components/Grid.d.ts",
      "import": "./dist/components/Grid.js"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.js"
    },
    "./animations": {
      "types": "./dist/animations/index.d.ts",
      "import": "./dist/animations/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && pnpm run build:css",
    "build:css": "cat src/theme/variables.css src/theme/base.css src/components/**/*.css > dist/styles.css 2>/dev/null || true",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "@nadi/core": "workspace:*"
  },
  "devDependencies": {
    "@nadi/core": "workspace:*",
    "@nadi/forms": "workspace:*",
    "@nadi/router": "workspace:*",
    "@nadi/testing": "workspace:*",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "tsup": "^8.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "nadi",
    "ui",
    "components",
    "reactive",
    "signals",
    "animations",
    "design-system"
  ],
  "author": "Nadi Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nadi/nadi",
    "directory": "packages/ui"
  }
}